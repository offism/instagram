<% var error %>
<% var title = title || "Instagram" %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link rel="icon"  sizes="120x120" href="https://instagram.com/static/images/ico/apple-touch-icon-120x120-precomposed.png/8a5bd3f267b1.png">
  <link rel="stylesheet" href="../../public/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Yesteryear&display=swap" rel="stylesheet">
    <link rel="shortcut icon" type="image/x-icon" href="/static/images/ico/favicon.ico/36b3ee2d91ed.ico">
     <link href="https://use.fontawesome.com/releases/v5.15.2/css/all.css" rel="stylesheet">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
   <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="text-center">

<section class="vh-100 d-flex flex-column justify-content-center align-items-center">
	<div class="container text-center">
     <div class="row align-items-center">
     	<div class="col-12 col-lg-6 d-lg-block d-none">
     		<div class="position-relative">
         		<img src="../public/img/loginBoxImgs.png" alt="img boxes">
     		    <div class="positionImg">
     		    	<div id="myCarousel" class="carousel slide" data-ride="carousel">
                     <div class="carousel-inner" role="listbox">
                       <div class="item active">
                         <img src="../public/img/img1.jpg" alt="main">
                       </div>
                       <div class="item">
                         <img src="../public/img/img2.jpg" alt="Chania">
                       </div>
                       <div class="item">
                         <img src="../public/img/img3.jpg" alt="Flower">
                       </div>
                        <div class="item">
                         <img src="../public/img/img4.jpg" alt="alid">
                       </div>
                        <div class="item">
                         <img src="../public/img/img5.jpg" alt="sousa">
                       </div>
                     </div>
                    </div>
     		    </div>
     		</div>
     	</div>
     	<div class="col-12 col-lg-6 d-lg-block d-none">
     		<div class="card text-center p-5">
      			<h1 class="my-5">Instagram</h1>
      			<% if(error){ %>
      			<div class="errorBox mb-2 alert alert-danger d-flex align-items-center justify-content-center">
                 <%= error%>
      			</div>
      			<% } %>
      			<form  method="POST">
      				<div class="form-floating mb-1">
                      <input style="min-height: 47px;" type="text" class="form-control bg-light mb-2" id="floatingInput" name="login" placeholder="Username">
                      <label for="floatingInput">Username</label>
                    </div>
                    <div class="form-floating">
                      <input style="min-height: 47px;" type="password" class="form-control bg-light mb-2" id="floatingPassword" name="password" placeholder="Password">
                      <label for="floatingPassword">Password</label>
                    </div>
                    <button class="btn btn-primary w-100 my-4">Login</button>
                    <a href="/signup">Forgot password?</a>
      			</form>
      		</div>
      		<div class="card text-center p-4 mt-2">
      		  <p class="p-0">Don't have an account? <a href="/signup">Sign up</a></p>
      		</div>
     	</div>
     </div>
	</div>
</section>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

<%- include('parts/footer') %>